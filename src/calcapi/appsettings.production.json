{
  // launch prod env, by specify the envvar: ASPNETCORE_ENVIRONMENT=production  (production needs to be lower case)
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "System": "Warning",
      // Set to warning, so that we can see less logs
      "Microsoft": "Warning",
      // Set this to Info, then we can see two log lines, request started and request finished
      "Microsoft.AspNetCore.Hosting.Internal.WebHost": "Information"
    }
  }
}
